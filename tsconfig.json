{
  "compilerOptions": {
    "target": "es2020",                         
    "module": "commonjs",
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"],
      "@utils/*": ["utils/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true, 
    "skipLibCheck": true,                                
    "resolveJsonModule": true,
    "experimentalDecorators": true,             
    "emitDecoratorMetadata": true
  }
}
